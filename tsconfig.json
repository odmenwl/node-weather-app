{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "paths": {
      "$core/*": ["src/core/*"],
      "$app/*": ["src/app/*"],
      "$db/*": ["src/db/*"],
    }
  }
}
